{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "cd ./packages/vue-chart-3/ && rimraf dist && rimraf types",
    "compile": "cd ./packages/vue-chart-3/ && tsc -p ./tsconfig.json --pretty",
    "dev": "cd ./packages/vue-chart-3/ && tsc -p ./tsconfig.json --pretty --watch",
    "build": "yarn run clean && yarn run compile",
    "debug:vue2": "cd packages/test/vue2 && yarn serve",
    "deploy": "lerna run build && lerna publish --skip-git"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
